<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping SYSTEM "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="entity">
	<class name="Reader">
		<id name="id" type="long">
			<generator class="native" />
		</id>
		<property name="password" type="string" not-null="true" length="50"/>
		<property name="username" type="string" length="100" not-null="true" />
		<property name="email" type="string" not-null="true"/>
		<property name="phoneNumber" type="string" not-null="false"/>
		<property name="borrowBookNumber" type="int" not-null="true"></property>
		<property name="fineState" type="boolean" not-null="true"></property>
		<property name="createDate" type="date" not-null="true" />
		<property name="checkState" type="boolean" not-null="true"></property>
	</class>
</hibernate-mapping>